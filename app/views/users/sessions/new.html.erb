<div class="container">
  <div class="col-xl-3"></div>
  <div class="col-xl-6">
    <h2>Login</h2>
    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>

      <div class="form-group">
        <%= f.label :email, "Email" %><br />
        <%= f.email_field :email, class: "form-control", id: "uname", placeholder: "Enter username", autofocus: true, autocomplete: "email" %>
      </div>
      <div class="form-group">
        <%= f.label :password, "Password" %><br />
        <%= f.password_field :password, autocomplete: "current-password", class: "form-control", id: "pwd", placeholder: "Enter password" %>
      </div>
      <%= f.submit "Log in", class: 'btn btn-primary' %>
    <% end %>
    <%= render "users/shared/links" %>
  </div>
</div>